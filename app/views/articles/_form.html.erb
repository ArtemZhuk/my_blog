<div class="container">
  <%= form_for @article do |f| %>
    <% if @article.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, 'Название' %><br />
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :text, 'Описание' %><br />
      <%= f.text_area :text, class: 'form-control' %>
    </div>

    <div class="row btn-row">
        <div class="actions col-xs-2 btn-save">
          <%= submit_tag 'Cохранить', class: 'btn btn-success' %>
        </div>
        <div class="btn btn-default col-xs-2 col-xs-offset-8 btn-back"> <%= link_to 'Назад', articles_path %> 
        </div>
    </div>
  <% end %>
</div>
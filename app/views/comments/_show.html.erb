<div class="container">
  <div class="coment">
    <% @article.comments.each do |comment| %>
    <p class="page-header name">
    <%= image_tag comment.user.avatar.url(:thumb) %>
      <strong>Имя:</strong>
      <td><%= @article.user.first_name%> </td>
    </p>
    <p>
      <strong>Комментарий:</strong>
      <%= comment.body %>
    </p>
  </div>

  <p class="btn btn-danger btn-sm">
    <%= link_to 'Удалить комментарий', [comment.article, comment],
                 method: :delete,
                 data: { confirm: 'Вы уверены?' } %>
  </p>
  <% end %>
</div>